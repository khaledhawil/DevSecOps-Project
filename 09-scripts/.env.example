# DevSecOps Project Configuration
# Copy this file to .env and update with your values

################################################################################
# User Configuration
################################################################################

# Docker Hub username (used for pushing images)
DOCKER_USERNAME=khaledhawil

# Docker Hub password (optional, will prompt if not set)
# DOCKER_PASSWORD=your-password

# GitHub username (used for GitOps repository)
GITHUB_USERNAME=khaledhawil

# GitHub repository name
GITHUB_REPO=devsecops-project

################################################################################
# AWS Configuration
################################################################################

# AWS Region
AWS_REGION=us-east-1

# AWS Account ID
# AWS_ACCOUNT_ID=123456789012

################################################################################
# Environment Configuration
################################################################################

# Default environment (dev, staging, prod)
ENVIRONMENT=dev

# Project name
PROJECT_NAME=devsecops

# Domain name (for ingress)
# DOMAIN=example.com

################################################################################
# Application Configuration
################################################################################

# Database
DB_PASSWORD=your-secure-password-here

# Redis
REDIS_PASSWORD=your-redis-password-here

# JWT Secret
JWT_SECRET=your-jwt-secret-here-change-in-production

################################################################################
# Security Scanning
################################################################################

# Fail build on high/critical vulnerabilities
FAIL_ON_HIGH=false

# SonarQube configuration (if using)
# SONAR_HOST_URL=http://localhost:9000
# SONAR_TOKEN=your-sonarqube-token

################################################################################
# Monitoring Configuration
################################################################################

# Grafana admin password
# GRAFANA_ADMIN_PASSWORD=admin

# Alert notification email
# ALERT_EMAIL=alerts@example.com

################################################################################
# CI/CD Configuration
################################################################################

# Enable automatic deployments
AUTO_DEPLOY=true

# ArgoCD sync policy
ARGOCD_AUTO_SYNC=true

################################################################################
# Development Configuration
################################################################################

# Enable debug mode
DEBUG=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info
